	<link type="text/css" href="/Mark_attendance.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

	<script type="text/javascript">
		function store_data() {
			var d = new Date();
			var date = d.getDate();
			var i = date % 8;
			window.localStorage.setItem("check", i);
		}
		function check_if_allowed() {
			var d = new Date();
			var date = d.getDate();
			var i = date % 8;
			var check = localStorage.getItem("check");
			if (i == check)
				return 0;
			else
				return 1;
		}
		function both() {
			if (check_if_allowed()) {
				store_data();
				var link = document.getElementById('link').innerHTML;
				window.location.replace(link);
			}
			else {
				window.alert('attendance marked already');
			}
		}
	</script>

</head>

